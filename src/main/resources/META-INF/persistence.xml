<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="notification">
		<class>notification.models.EmailMessage</class>
		<class>notification.models.Status</class>
		<validation-mode>CALLBACK</validation-mode>
		<properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.connection.password" value="demo123"/>
            <property name="hibernate.connection.username" value="demo"/>
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.connection.provider_class"
				value="org.hibernate.service.jdbc.connections.internal.C3P0ConnectionProvider" />
			<property name="hibernate.c3p0.min_size" value="1" />
			<property name="hibernate.c3p0.max_size" value="20" />
			<property name="hibernate.c3p0.timeout" value="300" />
			<property name="hibernate.c3p0.max_statements" value="500" />
			<property name="hibernate.c3p0.idle_test_period" value="1800" />
            <property name="hibernate.c3p0.unreturnedConnectionTimeout" value="300" />
            <property name="hibernate.c3p0.debugUnreturnedConnectionStackTraces" value="true" />
			<property name="show_sql" value="true" />
			<property name="format_sql" value="true" />
			<property name="hibernate.generate_statistics" value="true" />
			<property name="hibernate.default_schema" value="notification"/>
		</properties>
	</persistence-unit>
</persistence>
